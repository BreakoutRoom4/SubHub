<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/channel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChannelDetail">

    <ImageView
        android:id="@+id/ivBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/ivChannelImage"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvChannelName"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivBanner"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="0dp"
        android:text="Channel Name" />

    <TextView
        android:id="@+id/tvSubscriberCount"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvChannelName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:text="Subscribers" />

    <TextView
        android:id="@+id/tvSubHubCount"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSubscriberCount"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="0dp"
        android:text="SubHubSubs" />

    <Button
        android:id="@+id/btnSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivChannelImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="296dp"
        android:layout_marginRight="296dp"
        android:text="Follow" />

</RelativeLayout>